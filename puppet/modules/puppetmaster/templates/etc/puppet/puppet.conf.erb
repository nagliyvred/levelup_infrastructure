[main]
    vardir = /var/lib/puppet
    logdir = /var/log/puppet
    rundir = /var/run/puppet
    ssldir = $vardir/ssl
   # manifest = /data/puppet_code/levelup_infrastructure/puppet/manifests/site.pp
   # modulepath = /data/puppet_code/levelup_infrastructure/puppet/modules
    manifest = /vagrant/infrastructure/puppet/manifests/site.pp
    modulepath = /vagrant/infrastructure/puppet/modules
    pluginsync = true

[agent]
    localconfig = $vardir/localconfig
    report = false
    onetime = true
    daemonize = false
    show_diff = true

[master]
    ssl_client_header = SSL_CLIENT_S_DN
    ssl_client_verify_header = SSL_CLIENT_VERIFY
