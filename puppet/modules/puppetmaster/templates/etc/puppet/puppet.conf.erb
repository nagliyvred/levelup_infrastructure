[main]
    vardir = /var/lib/puppet
    logdir = /var/log/puppet
    rundir = /var/run/puppet
    ssldir = $vardir/ssl
    manifest = /data/puppet_code/$environment/levelup_infrastructure/puppet/manifests/main.pp
    modulepath = /data/puppet_code/$environment/levelup_infrastructure/puppet/modules
    pluginsync = true
    masterport = 443

[agent]
    localconfig = $vardir/localconfig
    report = false
    onetime = true
    daemonize = false
    show_diff = true

[master]
    ssl_client_header = SSL_CLIENT_S_DN
    ssl_client_verify_header = SSL_CLIENT_VERIFY
